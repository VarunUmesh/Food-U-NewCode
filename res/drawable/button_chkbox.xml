<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#ef4444" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="0dp"
          android:top="15dp"
          android:right="15dp"
          android:bottom="15dp" />
    </shape>
  </item>
  <item android:state_enabled="false" >
    <shape>
      <solid
          android:color="#E0E0E0" />
      <stroke
          android:width="1dp"
          android:color="#E8E8E8" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="0dp"
          android:top="15dp"
          android:right="15dp"
          android:bottom="15dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#ef4444"
          android:endColor="#800000"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="0dp"
          android:top="15dp"
          android:right="15dp"
          android:bottom="15dp" />
    </shape>
  </item>
</selector>
